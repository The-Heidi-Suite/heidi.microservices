{
  "name": "heidi.microservices",
  "version": "1.24.0",
  "description": "NestJS microservices monorepo for HEIDI platform",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "npm install && npm run prisma:generate",
    "prebuild": "rimraf dist",
    "build:auth": "nest build auth",
    "build:users": "nest build users",
    "build:city": "nest build city",
    "build:core": "nest build core",
    "build:notification": "nest build notification",
    "build:scheduler": "nest build scheduler",
    "build:integration": "nest build integration",
    "build:admin": "nest build admin",
    "build:terminal": "nest build terminal",
    "dev:all": "concurrently --names AUTH,CORE,USERS,CITY,NOTIF,SCHED,INTEG -c bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold,bgYellow.bold,bgRed.bold,bgBlack.bold \"npm run dev:auth\" \"npm run dev:core\" \"npm run dev:users\" \"npm run dev:city\" \"npm run dev:notification\" \"npm run dev:schedule\" \"npm run dev:integration\"",
    "dev:auth": "nest start auth --watch",
    "dev:core": "nest start core --watch",
    "dev:users": "nest start users --watch",
    "dev:city": "nest start city --watch",
    "dev:notification": "nest start notification --watch",
    "dev:schedule": "nest start scheduler --watch",
    "dev:integration": "nest start integration --watch",
    "dev:admin": "nest start admin --watch",
    "dev:terminal": "nest start terminal --watch",
    "dev:docker": "docker compose -f docker-compose.dev.yml up -d",
    "prisma:generate": "./scripts/prisma-generate-all.sh",
    "prisma:migrate": "./scripts/prisma-migrate-all.sh",
    "prisma:migrate:prod": "./scripts/prisma-migrate-prod.sh",
    "seed:terms": "bash ./scripts/seed-wrapper.sh scripts/seed-terms.ts",
    "seed:salutations": "bash ./scripts/seed-wrapper.sh scripts/seed-salutations.ts",
    "seed:categories": "bash ./scripts/seed-wrapper.sh scripts/seed-categories.ts",
    "upload:category-assets": "bash ./scripts/seed-wrapper.sh scripts/upload-category-assets.ts",
    "seed:initial-admin": "bash ./scripts/seed-wrapper.sh scripts/seed-initial-admin.ts",
    "seed:city-categories": "bash ./scripts/seed-wrapper.sh scripts/seed-city-categories.ts",
    "seed:permissions": "bash ./scripts/seed-wrapper.sh scripts/seed-permissions.ts",
    "seed:tiles": "bash ./scripts/seed-wrapper.sh scripts/seed-tiles.ts",
    "upload:tile-assets": "bash ./scripts/seed-wrapper.sh scripts/upload-tile-assets.ts",
    "seed:destination-one": "bash ./scripts/seed-wrapper.sh scripts/seed-destination-one-integration.ts",
    "seed:mobilithek-parking": "bash ./scripts/seed-wrapper.sh scripts/seed-mobilithek-parking-integration.ts",
    "seed:kiel-newsletter": "bash ./scripts/seed-wrapper.sh scripts/seed-kiel-newsletter-integration.ts",
    "seed:firebase-project": "bash ./scripts/seed-wrapper.sh scripts/seed-firebase-project.ts",
    "seed:schedules": "bash ./scripts/seed-wrapper.sh scripts/seed-schedules.ts",
    "seed:all": "bash ./scripts/seed-all.sh",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker compose build",
    "docker:build:sequential": "bash scripts/docker-build-sequential.sh",
    "docker:build:monitoring": "docker compose --profile monitoring build",
    "docker:build:no-cache": "docker compose build --no-cache",
    "docker:up": "docker compose up -d",
    "docker:up:monitoring": "docker compose --profile monitoring up -d",
    "docker:down": "docker compose down",
    "docker:down:monitoring": "docker compose --profile monitoring down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:monitoring": "docker compose --profile monitoring logs -f",
    "docker:images": "docker images",
    "docker:ps": "docker compose ps",
    "docker:stats": "docker stats --no-stream",
    "docker:prune": "docker system prune -f",
    "docker:prune:all": "docker system prune -a -f --volumes",
    "docker:prune:images": "docker image prune -a -f",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "docker:disk-usage": "docker system df",
    "backup:data": "./scripts/backup-data.sh",
    "data:list": "ls -lh ./data/",
    "data:size": "du -sh ./data/*",
    "commit": "cz",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.925.0",
    "@aws-sdk/s3-request-presigner": "^3.925.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/microservices": "^11.1.8",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "11.0.7",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.19.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cron-parser": "^5.4.0",
    "file-type": "^16.5.4",
    "firebase-admin": "^12.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "multer": "^2.0.2",
    "nest-winston": "^1.10.2",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.33.5",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@heidi/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@heidi/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@heidi/prisma-auth$": "<rootDir>/libs/prisma/src/aliases/prisma-auth.ts",
      "^@heidi/prisma-users$": "<rootDir>/libs/prisma/src/aliases/prisma-users.ts",
      "^@heidi/prisma-city$": "<rootDir>/libs/prisma/src/aliases/prisma-city.ts",
      "^@heidi/prisma-core$": "<rootDir>/libs/prisma/src/aliases/prisma-core.ts",
      "^@heidi/prisma-notification$": "<rootDir>/libs/prisma/src/aliases/prisma-notification.ts",
      "^@heidi/prisma-scheduler$": "<rootDir>/libs/prisma/src/aliases/prisma-scheduler.ts",
      "^@heidi/prisma-integration$": "<rootDir>/libs/prisma/src/aliases/prisma-integration.ts",
      "^@heidi/prisma-admin$": "<rootDir>/libs/prisma/src/aliases/prisma-admin.ts",
      "^@heidi/prisma-terminal$": "<rootDir>/libs/prisma/src/aliases/prisma-terminal.ts",
      "^@heidi/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@heidi/rabbitmq(|/.*)$": "<rootDir>/libs/rabbitmq/src/$1",
      "^@heidi/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@heidi/jwt(|/.*)$": "<rootDir>/libs/jwt/src/$1",
      "^@heidi/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1",
      "^@heidi/metrics(|/.*)$": "<rootDir>/libs/metrics/src/$1",
      "^@heidi/monitoring(|/.*)$": "<rootDir>/libs/monitoring/src/$1",
      "^@heidi/health(|/.*)$": "<rootDir>/libs/health/src/$1",
      "^@heidi/translations(|/.*)$": "<rootDir>/libs/translations/src/$1",
      "^@heidi/errors(|/.*)$": "<rootDir>/libs/errors/src/$1",
      "^@heidi/tenancy(|/.*)$": "<rootDir>/libs/tenancy/src/$1",
      "^@heidi/rbac(|/.*)$": "<rootDir>/libs/rbac/src/$1",
      "^@heidi/saga(|/.*)$": "<rootDir>/libs/saga/src/$1",
      "^@heidi/contracts(|/.*)$": "<rootDir>/libs/contracts/src/$1",
      "^@heidi/i18n(|/.*)$": "<rootDir>/libs/i18n/src/$1",
      "^@heidi/storage(|/.*)$": "<rootDir>/libs/storage/src/$1"
    }
  },
  "engines": {
    "node": ">=24.11.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.9.2",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
