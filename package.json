{
  "name": "heidi.microservices",
  "version": "1.9.0",
  "description": "NestJS microservices monorepo for HEIDI platform",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn install && yarn prisma:generate",
    "prebuild": "rimraf dist",
    "build:auth": "nest build auth",
    "build:users": "nest build users",
    "build:city": "nest build city",
    "build:core": "nest build core",
    "build:notification": "nest build notification",
    "build:scheduler": "nest build scheduler",
    "build:integration": "nest build integration",
    "build:admin": "nest build admin",
    "build:terminal": "nest build terminal",
    "dev:all": "concurrently --names AUTH,CORE,USERS,CITY,NOTIF,SCHED -c bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold,bgYellow.bold,bgRed.bold \"yarn dev:auth\" \"yarn dev:core\" \"yarn dev:users\" \"yarn dev:city\" \"yarn dev:notification\" \"yarn dev:schedule\"",
    "dev:auth": "nest start auth --watch",
    "dev:core": "nest start core --watch",
    "dev:users": "nest start users --watch",
    "dev:city": "nest start city --watch",
    "dev:notification": "nest start notification --watch",
    "dev:schedule": "nest start scheduler --watch",
    "dev:integration": "nest start integration --watch",
    "dev:admin": "nest start admin --watch",
    "dev:terminal": "nest start terminal --watch",
    "dev:docker": "docker compose -f docker-compose.dev.yml up -d",
    "prisma:generate": "./scripts/prisma-generate-all.sh",
    "prisma:migrate": "./scripts/prisma-migrate-all.sh",
    "prisma:migrate:prod": "./scripts/prisma-migrate-prod.sh",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "commit": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry": "standard-version --dry-run"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/throttler": "^5.1.1",
    "@prisma/client": "^5.8.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "nest-winston": "^1.9.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^24.10.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.95.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@heidi/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@heidi/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@heidi/prisma-auth$": "<rootDir>/libs/prisma/src/aliases/prisma-auth.ts",
      "^@heidi/prisma-users$": "<rootDir>/libs/prisma/src/aliases/prisma-users.ts",
      "^@heidi/prisma-city$": "<rootDir>/libs/prisma/src/aliases/prisma-city.ts",
      "^@heidi/prisma-core$": "<rootDir>/libs/prisma/src/aliases/prisma-core.ts",
      "^@heidi/prisma-notification$": "<rootDir>/libs/prisma/src/aliases/prisma-notification.ts",
      "^@heidi/prisma-scheduler$": "<rootDir>/libs/prisma/src/aliases/prisma-scheduler.ts",
      "^@heidi/prisma-integration$": "<rootDir>/libs/prisma/src/aliases/prisma-integration.ts",
      "^@heidi/prisma-admin$": "<rootDir>/libs/prisma/src/aliases/prisma-admin.ts",
      "^@heidi/prisma-terminal$": "<rootDir>/libs/prisma/src/aliases/prisma-terminal.ts",
      "^@heidi/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@heidi/rabbitmq(|/.*)$": "<rootDir>/libs/rabbitmq/src/$1",
      "^@heidi/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@heidi/jwt(|/.*)$": "<rootDir>/libs/jwt/src/$1",
      "^@heidi/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1",
      "^@heidi/metrics(|/.*)$": "<rootDir>/libs/metrics/src/$1",
      "^@heidi/monitoring(|/.*)$": "<rootDir>/libs/monitoring/src/$1",
      "^@heidi/health(|/.*)$": "<rootDir>/libs/health/src/$1",
      "^@heidi/errors(|/.*)$": "<rootDir>/libs/errors/src/$1",
      "^@heidi/tenancy(|/.*)$": "<rootDir>/libs/tenancy/src/$1",
      "^@heidi/rbac(|/.*)$": "<rootDir>/libs/rbac/src/$1",
      "^@heidi/saga(|/.*)$": "<rootDir>/libs/saga/src/$1",
      "^@heidi/contracts(|/.*)$": "<rootDir>/libs/contracts/src/$1",
      "^@heidi/i18n(|/.*)$": "<rootDir>/libs/i18n/src/$1"
    }
  },
  "engines": {
    "node": ">=24.11.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@4.10.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
