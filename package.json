{
  "name": "heidi.microservices",
  "version": "1.0.0",
  "description": "NestJS microservices monorepo for HEIDI platform",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "bootstrap": "yarn install && yarn prisma:generate",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:all": "yarn workspaces foreach -Apt run build",
    "dev:all": "concurrently --names AUTH,CORE,TERM,CITY,NOTIF,SCHED -c bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold,bgYellow.bold,bgRed.bold \"yarn dev:auth\" \"yarn dev:core\" \"yarn dev:terminal\" \"yarn dev:city\" \"yarn dev:notification\" \"yarn dev:schedule\"",
    "dev:auth": "yarn workspace @heidi/auth start:dev",
    "dev:core": "yarn workspace @heidi/core start:dev",
    "dev:terminal": "yarn workspace @heidi/terminal start:dev",
    "dev:city": "yarn workspace @heidi/city start:dev",
    "dev:notification": "yarn workspace @heidi/notification start:dev",
    "dev:schedule": "yarn workspace @heidi/scheduler start:dev",
    "dev:docker": "docker compose -f docker-compose.dev.yml up",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:generate": "yarn workspace @heidi/prisma prisma generate",
    "prisma:migrate": "yarn workspace @heidi/prisma prisma migrate dev",
    "prisma:migrate:prod": "yarn workspace @heidi/prisma prisma migrate deploy",
    "prisma:studio": "yarn workspace @heidi/prisma prisma studio",
    "prisma:seed": "yarn workspace @heidi/prisma prisma db seed",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "lint:all": "yarn workspaces foreach -Apt run lint",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "jest",
    "test:all": "yarn workspaces foreach -Apt run test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "commit": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "release:dry": "standard-version --dry-run"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/throttler": "^5.1.1",
    "@prisma/client": "^5.8.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "nest-winston": "^1.9.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@heidi/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@heidi/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@heidi/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@heidi/rabbitmq(|/.*)$": "<rootDir>/libs/rabbitmq/src/$1",
      "^@heidi/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@heidi/jwt(|/.*)$": "<rootDir>/libs/jwt/src/$1",
      "^@heidi/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1",
      "^@heidi/metrics(|/.*)$": "<rootDir>/libs/metrics/src/$1",
      "^@heidi/monitoring(|/.*)$": "<rootDir>/libs/monitoring/src/$1",
      "^@heidi/health(|/.*)$": "<rootDir>/libs/health/src/$1",
      "^@heidi/errors(|/.*)$": "<rootDir>/libs/errors/src/$1"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@4.10.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
