{
  "id": null,
  "uid": "heidi-infrastructure",
  "title": "HEIDI Infrastructure Overview",
  "tags": ["infrastructure", "heidi"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "type": "graph",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "percent", "min": 0, "max": 100 }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 2,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "type": "graph",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used Memory",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total Memory",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "bytes" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "type": "graph",
      "title": "Disk I/O",
      "targets": [
        {
          "expr": "rate(node_disk_io_time_seconds_total[5m])",
          "legendFormat": "{{device}}",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "short" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "type": "graph",
      "title": "Network Traffic",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m])",
          "legendFormat": "{{device}} - RX",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[5m])",
          "legendFormat": "{{device}} - TX",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "Bps" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "type": "graph",
      "title": "PostgreSQL Connections",
      "targets": [
        {
          "expr": "pg_stat_database_numbackends",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "short" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 6,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "type": "graph",
      "title": "PostgreSQL Database Size",
      "targets": [
        {
          "expr": "pg_database_size_bytes",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "bytes" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 7,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "type": "graph",
      "title": "PostgreSQL Transactions",
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[5m])",
          "legendFormat": "Commits - {{datname}}",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback[5m])",
          "legendFormat": "Rollbacks - {{datname}}",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "ops" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 8,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "type": "graph",
      "title": "Redis Memory Usage",
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "Used Memory",
          "refId": "A"
        },
        {
          "expr": "redis_memory_max_bytes",
          "legendFormat": "Max Memory",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "bytes" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 9,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "type": "graph",
      "title": "Redis Commands",
      "targets": [
        {
          "expr": "rate(redis_commands_total[5m])",
          "legendFormat": "{{cmd}}",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "ops" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 10,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "type": "graph",
      "title": "Redis Connected Clients",
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "Connected Clients",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "short" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 11,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 40 },
      "type": "graph",
      "title": "RabbitMQ Queue Depth",
      "targets": [
        {
          "expr": "rabbitmq_queue_messages",
          "legendFormat": "{{queue}}",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "short" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 12,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 40 },
      "type": "graph",
      "title": "RabbitMQ Message Rates",
      "targets": [
        {
          "expr": "rate(rabbitmq_queue_messages_published_total[5m])",
          "legendFormat": "Published - {{queue}}",
          "refId": "A"
        },
        {
          "expr": "rate(rabbitmq_queue_messages_delivered_total[5m])",
          "legendFormat": "Delivered - {{queue}}",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "ops" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 13,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 48 },
      "type": "graph",
      "title": "RabbitMQ Connections",
      "targets": [
        {
          "expr": "rabbitmq_connections",
          "legendFormat": "Connections",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "short" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 14,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 48 },
      "type": "graph",
      "title": "Disk Space Usage",
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\"})",
          "legendFormat": "Disk Usage %",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "percent", "min": 0, "max": 100 }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    },
    {
      "id": 15,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 56 },
      "type": "graph",
      "title": "System Load Average",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m",
          "refId": "C"
        }
      ],
      "yaxes": [{ "format": "short" }, { "format": "short" }],
      "xaxis": { "mode": "time", "show": true }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
