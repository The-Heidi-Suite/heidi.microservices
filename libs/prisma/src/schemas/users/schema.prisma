// Prisma schema for Users microservice
generator client {
  provider      = "prisma-client-js"
  output        = "../../../../../node_modules/.prisma/client-users"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("USERS_DATABASE_URL")
}

// User model - for user management
model User {
  id                  String            @id @default(uuid())
  email               String?           @unique
  username            String?           @unique
  password            String?
  role                UserRole          @default(CITIZEN)
  userType            UserType          @default(REGISTERED)
  guestId             String?           @unique
  deviceId            String?
  devicePlatform      DevicePlatform?
  migratedFromGuestId String?
  cityId              String?
  firstName           String?
  lastName            String?
  emailVerified       Boolean          @default(false)
  isActive            Boolean           @default(true)
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  deletedAt           DateTime?

  @@index([email])
  @@index([emailVerified])
  @@index([username])
  @@index([guestId])
  @@index([deviceId])
  @@index([userType])
  @@index([isActive])
  @@index([role])
  @@index([cityId])
  @@unique([deviceId, devicePlatform])
  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  CITY_ADMIN
  CITIZEN
}

enum UserType {
  REGISTERED
  GUEST
}

enum DevicePlatform {
  IOS
  ANDROID
}
